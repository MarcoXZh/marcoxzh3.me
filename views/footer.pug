//- Footer
nav(class='navbar navbar-expand-md navbar-dark fixed-bottom', id='footer')
  nav(class='navbar navbar-expand-md navbar-dark bottom-icon text-white')
    img(id='secure', src='/img/comodo_secure_seal_100x85_transp.png',
        title='Trust Logo')
    a(class='text-white', href='https://www.positivessl.com/') Positive SSL
    | &nbsp;secured by&nbsp;
    a(class='text-white', href='https://ssl.comodo.com/') Comodo&copy;
  button(class='navbar-toggler navbar-toggler-left', type='button',
         data-toggle='collapse', data-target='#navfooter',
         aria-controls='navfooter', aria-expanded='false',
         aria-label='Toggle navigation')
    span(class='navbar-toggler-icon')
  //- button
  div(class='collapse navbar-collapse', id='navfooter')
    ul(class='navbar-nav ml-auto'): ul(class='list-inline')
      each footer in footers
        li(class='list-inline-item')
          a(class=footer.desc, href=footer.url, title=footer.name)
      //- each footer in footers
      li(class='list-inline-item'): a(class='whatever')
    //- ul(class='navbar-nav ml-auto'): ul(class='list-inline')
    div(class='list-inline-item btn-group dropup')
      a(class='fas fa-code', href='#',
        data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
      div(class='dropdown-menu bg-info dropdown-menu-side')
        each tech in techs
          a(class='dropdown-item text-light', href=tech.url)
            if tech.desc.startsWith('fa')
              span(class=tech.desc)
            else
              span: img(class='icon-url', src=tech.desc)
            //- if tech.desc.startsWith('fa')
            span(class='whatever') &nbsp;&nbsp;#{tech.name}
      //- div(class='dropdown-menu')
